{
    "name": "local-graphql",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "dev": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
        "graphi": "node --experimental-specifier-resolution=node --loader ts-node/esm src/graphi.ts",
        "lint": "eslint --ext .ts,.js,.tsx,.jsx --ignore-path .gitignore . --fix",
        "lint:css": "stylelint src/**/*.scss",
        "test:unit": "jest --config jest.config.js"
    },
    "dependencies": {
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "graphql": "^16.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "sass": "^1.35.2",
        "stylelint": "^13.13.1",
        "ts-jest": "^27.0.4",
        "ts-node": "^10.4.0",
        "typescript": "^4.3.2"
    }
}
